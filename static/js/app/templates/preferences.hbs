<h1>Preferences</h1>

<fieldset>
  <legend>UI</legend>
  <label for="theme">Theme</label>
  <select name="theme" class="js-theme">
    <option value="default" {{#equal this.ui.theme 'default'}}selected{{/equal}}>
      default
    </option>
    <option value="dark" {{#equal this.ui.theme 'dark'}}selected{{/equal}}>
      dark
    </option>
    <option value="compact" {{#equal this.ui.theme 'compact'}}selected{{/equal}}>
      compact
    </option>
  </select>
</fieldset>

